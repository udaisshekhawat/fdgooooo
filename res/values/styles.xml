<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="SplashscreenTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/COLOR_BLACK</item>
         <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ApplicationTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/COLOR_BLACK</item> 
      
       
    </style>
 <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
<item name="android:background">@drawable/app_topbar_bg</item>
<item name="android:actionMenuTextColor">@color/COLOR_WHITE</item>
<item name="android:textColor">@color/COLOR_WHITE</item>
<item name="android:displayOptions">showTitle</item>
</style>
<style name="MyTheme" parent="@android:style/Theme.Holo.Light">
<item name="android:actionBarStyle">@style/ActionBar</item>
</style>
</resources>
