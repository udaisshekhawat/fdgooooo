<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="VeryLargeTextStyle">
        <item name="android:textColor">@color/COLOR_YELLOWORANGE</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditLblStyle">
        <item name="android:textColor">@color/COLOR_BLACK</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LableTextStyleBlack">
        <item name="android:textColor">@color/COLOR_BLACK</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="LableTextStyleWhite">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LblTextStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="MenusubItemStyle">
        <item name="android:textColor">@color/COLOR_MEGENTHA</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MenuDisplyItemStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MenupriceDisplyItemStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextStyle">
        <item name="android:textColor">@color/COLOR_BLACK</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MediumTextStyle">
        <item name="android:textColor">@color/COLOR_BLACK</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/COLOR_BLACK</item>
        <item name="android:textSize">8dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ButtonSmallTextStyle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CustomTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/COLOR_WHITE</item>
        <item name="android:colorBackground">@color/COLOR_WHITE</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/COLOR_WHITE</item>
    </style>

</resources>